{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "plugins": [{ "name": "next" }],
    "typeRoots": ["./types", "./node_modules/@types"],
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/.mercato/*": ["./.mercato/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"]
}
