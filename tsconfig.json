{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    // Safety net: if someone forces emit at repo root, keep JS out of src/
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/lib/*": [
        "./packages/shared/src/lib/*"
      ],
      "@/types/*": [
        "./packages/shared/src/types/*"
      ],
      "@open-mercato/core/*": [
        "./packages/core/src/*"
      ],
      "@open-mercato/core/datamodel/entities": [
        "./packages/core/generated/entities.ids.generated.ts"
      ],
      "@open-mercato/core/datamodel/entities/*": [
        "./packages/core/generated/entities/*"
      ],
      "@open-mercato/core/generated/*": [
        "./packages/core/generated/*"
      ],
      "@open-mercato/core/generated/entity-fields-registry": [
        "./packages/core/generated/entity-fields-registry.ts"
      ],
      "@open-mercato/example/*": [
        "./packages/example/src/*"
      ],
      "@open-mercato/example/datamodel/entities": [
        "./packages/example/generated/entities.ids.generated.ts"
      ],
      "@open-mercato/example/datamodel/entities/*": [
        "./packages/example/generated/entities/*"
      ],
      "@open-mercato/example/generated/*": [
        "./packages/example/generated/*"
      ],
      "@open-mercato/content/*": [
        "./packages/content/src/*"
      ],
      "@open-mercato/content/generated/*": [
        "./packages/content/generated/*"
      ],
      "@open-mercato/onboarding/*": [
        "./packages/onboarding/src/*"
      ],
      "@open-mercato/onboarding/generated/*": [
        "./packages/onboarding/generated/*"
      ],
      "@open-mercato/search": [
        "./packages/search/src/index.ts"
      ],
      "@open-mercato/search/*": [
        "./packages/search/src/*"
      ],
      "@open-mercato/cli/*": [
        "./packages/cli/src/*"
      ],
      "@open-mercato/cli/generated/*": [
        "./packages/cli/generated/*"
      ],
      "@open-mercato/events/*": [
        "./packages/events/src/*"
      ],
      "@open-mercato/events/generated/*": [
        "./packages/events/generated/*"
      ],
      "@open-mercato/cache": [
        "./packages/cache/src/index.ts"
      ],
      "@open-mercato/cache/*": [
        "./packages/cache/src/*"
      ],
      "@open-mercato/shared/*": [
        "./packages/shared/src/*"
      ],
      "@open-mercato/shared/generated/*": [
        "./packages/shared/generated/*"
      ],
      "@open-mercato/ui": [
        "./packages/ui/src/index.ts"
      ],
      "@open-mercato/ui/*": [
        "./packages/ui/src/*"
      ],
      "@/modules/registry": [
        "./packages/shared/src/modules/registry.ts"
      ],
      "@/modules/dsl": [
        "./packages/shared/src/modules/dsl.ts"
      ],
      "@/modules/entities": [
        "./packages/shared/src/modules/entities.ts"
      ],
      "@/generated/*": [
        "./generated/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@open-mercato/shipments/*": [
        "./packages/shipments/src/*"
      ],
      "@open-mercato/shipments/datamodel/entities": [
        "./packages/shipments/generated/entities.ids.generated.ts"
      ],
      "@open-mercato/shipments/datamodel/entities/*": [
        "./packages/shipments/generated/entities/*"
      ],
      "@open-mercato/shipments/generated/*": [
        "./packages/shipments/generated/*"
      ],
      "@open-mercato/fms_tracking/*": [
        "packages/fms_tracking/src/*"
      ],
      "@open-mercato/fms_tracking/datamodel/entities": [
        "packages/fms_tracking/generated/entities.ids.generated.ts"
      ],
      "@open-mercato/fms_tracking/datamodel/entities/*": [
        "packages/fms_tracking/generated/entities/*"
      ],
      "@open-mercato/fms_tracking/generated/*": [
        "packages/fms_tracking/generated/*"
      ],
      "@open-mercato/fms/*": [
        "./packages/fms/src/*"
      ],
      "@open-mercato/fms/datamodel/entities": [
        "./packages/fms/generated/entities.ids.generated.ts"
      ],
      "@open-mercato/fms/datamodel/entities/*": [
        "./packages/fms/generated/entities/*"
      ],
      "@open-mercato/fms/generated/*": [
        "./packages/fms/generated/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "docs/**"
  ]
}
