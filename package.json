{
  "name": "open-mercato",
  "version": "0.3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "modules:entities": "tsx scripts/generate-module-entities.ts",
    "modules:di": "tsx scripts/generate-module-di.ts",
    "modules:ids": "tsx scripts/generate-entity-ids.ts",
    "modules:prepare": "tsx scripts/generate-entity-ids.ts && tsx scripts/generate-module-registry.ts && tsx scripts/generate-module-entities.ts && tsx scripts/generate-module-di.ts",
    "dev": "next dev --turbopack",
    "predev": "npm run modules:prepare",
    "build": "yarn modules:prepare && next build --turbopack",
    "build:packages": "tsc -p packages/core/tsconfig.build.json && tsc -p packages/example/tsconfig.build.json && tsc -p packages/cli/tsconfig.build.json && tsc -p packages/onboarding/tsconfig.build.json",
    "start": "next start",
    "lint": "eslint",
    "modules:generate": "tsx scripts/generate-module-registry.ts",
    "prebuild": "npm run modules:prepare",
    "db:generate": "tsx scripts/mikro-modules.ts generate",
    "db:migrate": "npm run modules:prepare && tsx scripts/mikro-modules.ts apply && tsx packages/cli/src/bin.ts entities install --global",
    "db:greenfield": "tsx scripts/mikro-modules.ts greenfield",
    "db:entities:install": "npm run modules:prepare && tsx packages/cli/src/bin.ts entities install",
    "init": "tsx packages/cli/src/bin.ts init",
    "premercato": "npm run modules:prepare",
    "mercato": "tsx packages/cli/src/bin.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "docs:dev": "npm run --prefix docs dev"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@mikro-orm/core": "^6.3.7",
    "@mikro-orm/migrations": "^6.3.7",
    "@mikro-orm/postgresql": "^6.3.7",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.3",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-table": "^8.20.5",
    "@uiw/react-markdown-preview": "^5.1.5",
    "@uiw/react-md-editor": "^4.0.8",
    "ai": "^4.0.0",
    "awilix": "^8.0.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.543.0",
    "next": "15.5.2",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-email": "^4.2.11",
    "remark-gfm": "^4.0.1",
    "resend": "^6.0.3",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "openapi-typescript": "^7.10.1",
    "semantic-release": "^24.2.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "echo ${nextRelease.version} > .VERSION"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.0.0",
    "ioredis": "^5.4.1"
  }
}
