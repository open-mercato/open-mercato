{
  "name": "open-mercato",
  "version": "0.3.12",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@open-mercato/app",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "start": "turbo run start --filter=@open-mercato/app",
    "generate": "turbo run generate --filter=@open-mercato/app",
    "db:generate": "turbo run db:generate --filter=@open-mercato/app",
    "db:migrate": "turbo run db:migrate --filter=@open-mercato/app",
    "db:greenfield": "turbo run db:greenfield --filter=@open-mercato/app",
    "initialize": "turbo run initialize --filter=@open-mercato/app",
    "docs:dev": "turbo run dev --filter=@open-mercato/docs",
    "clean:generated": "find . -type d \\( -name '.mercato' -o -name 'dist' -o -name '.turbo' \\) -not -path '*/node_modules/*' -exec rm -rf {} + 2>/dev/null; echo 'Cleaned generated files'",
    "clean:packages": "find . -type d -name 'node_modules' -exec rm -rf {} + 2>/dev/null; echo 'Cleaned node_modules'",
    "clean": "yarn clean:generated && yarn clean:packages"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.16.0",
    "@types/react-big-calendar": "^1.16.3",
    "@types/semver": "^7.7.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.39.1",
    "glob": "^11.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "openapi-typescript": "^7.10.1",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "echo ${nextRelease.version} > .VERSION"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
