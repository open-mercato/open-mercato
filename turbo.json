{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["*"],
  "tasks": {
    "build": {
      "cache": false,
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "mcp:dev": {
      "cache": false,
      "persistent": true
    },
    "mcp:serve": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "cache": false,
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "generate": {
      "cache": false,
      "outputs": [".mercato/**"]
    },
    "db:generate": {
      "cache": false,
      "outputs": []
    },
    "db:migrate": {
      "cache": false,
      "outputs": []
    },
    "db:greenfield": {
      "cache": false,
      "outputs": []
    },
    "reinstall": {
      "cache": false,
      "outputs": []
    },
    "initialize": {
      "cache": false,
      "outputs": []
    }
  }
}
